{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["@cloudflare/workers-types", "node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@client/*": ["./lib/client/*"],
      "@server/*": ["./lib/server/*"],
      "@shared/*": ["./lib/shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "middleware.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
    ".open-next/types/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "dist", "turbo", ".open-next"]
}
